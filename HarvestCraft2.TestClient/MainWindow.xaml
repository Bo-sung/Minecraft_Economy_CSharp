<Window x:Class="HarvestCraft2.TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="HarvestCraft 2 Economy Test Client" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- 로딩 애니메이션 스타일 -->
        <Style x:Key="LoadingProgressBar" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="IsIndeterminate" Value="True"/>
            <Setter Property="Foreground" Value="{StaticResource HarvestGreen}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단 헤더 -->
            <RowDefinition Height="*"/>
            <!-- 메인 컨텐츠 -->
            <RowDefinition Height="Auto"/>
            <!-- 하단 상태바 -->
        </Grid.RowDefinitions>

        <!-- 상단 헤더 영역 -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,8">
            <Grid Background="{StaticResource HarvestGreen}" Height="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 로고 및 제목 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                          VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="Sprout" 
                                           Width="32" Height="32" 
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="HarvestCraft 2 Economy" 
                                 FontSize="20" FontWeight="Bold" 
                                 Foreground="White"/>
                        <TextBlock Text="Test Client v1.0" 
                                 FontSize="12" 
                                 Foreground="#E0FFFFFF"/>
                    </StackPanel>
                </StackPanel>

                <!-- API 연결 상태 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                          VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon x:Name="ConnectionIcon"
                                           Kind="WifiStrength4" 
                                           Width="20" Height="20" 
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                    <TextBlock x:Name="ConnectionStatus" 
                             Text="API 연결됨" 
                             FontSize="12" 
                             Foreground="White"
                             Margin="8,0,0,0"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 새로고침 버튼 -->
                <Button Grid.Column="3" 
                      x:Name="RefreshButton"
                      Style="{StaticResource MaterialDesignIconForegroundButton}"
                      Foreground="White"
                      Margin="0,0,16,0"
                      ToolTip="데이터 새로고침">
                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- 메인 탭 컨트롤 -->
        <TabControl Grid.Row="1" 
                  Style="{StaticResource MaterialDesignTabControl}"
                  materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                  Margin="8,0,8,8">

            <!-- 상점 거래 탭 (임시 컨텐츠) -->
            <TabItem Header="상점 거래" 
                   Style="{StaticResource CustomTabItemStyle}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Store" 
                                                   Width="18" Height="18"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="상점 거래" 
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <Grid>
                    <materialDesign:Card Margin="16">
                        <StackPanel Margin="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Store" Width="64" Height="64" 
                                                   Foreground="{StaticResource HarvestGreen}"
                                                   HorizontalAlignment="Center"/>
                            <TextBlock Text="상점 거래 기능" FontSize="24" FontWeight="Bold"
                                     HorizontalAlignment="Center" Margin="0,16,0,8"/>
                            <TextBlock Text="아이템 구매/판매 인터페이스가 여기에 표시됩니다."
                                     HorizontalAlignment="Center" Opacity="0.7"/>
                            <TextBlock Text="곧 개발될 예정입니다!"
                                     HorizontalAlignment="Center" Margin="0,8,0,0"
                                     Foreground="{StaticResource EconomyBlue}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!-- 가격 모니터링 탭 (임시 컨텐츠) -->
            <TabItem Header="가격 모니터링" 
                   Style="{StaticResource CustomTabItemStyle}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartLine" 
                                                   Width="18" Height="18"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="가격 모니터링" 
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <Grid>
                    <materialDesign:Card Margin="16">
                        <StackPanel Margin="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ChartLine" Width="64" Height="64" 
                                                   Foreground="{StaticResource EconomyBlue}"
                                                   HorizontalAlignment="Center"/>
                            <TextBlock Text="가격 모니터링" FontSize="24" FontWeight="Bold"
                                     HorizontalAlignment="Center" Margin="0,16,0,8"/>
                            <TextBlock Text="실시간 가격 차트와 트렌드 분석이 여기에 표시됩니다."
                                     HorizontalAlignment="Center" Opacity="0.7"/>
                            <TextBlock Text="LiveCharts 통합 예정!"
                                     HorizontalAlignment="Center" Margin="0,8,0,0"
                                     Foreground="{StaticResource PriceOrange}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!-- 시장 분석 탭 (임시 컨텐츠) -->
            <TabItem Header="시장 분석" 
                   Style="{StaticResource CustomTabItemStyle}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Finance" 
                                                   Width="18" Height="18"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="시장 분석" 
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <Grid>
                    <materialDesign:Card Margin="16">
                        <StackPanel Margin="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Finance" Width="64" Height="64" 
                                                   Foreground="{StaticResource PriceOrange}"
                                                   HorizontalAlignment="Center"/>
                            <TextBlock Text="시장 분석" FontSize="24" FontWeight="Bold"
                                     HorizontalAlignment="Center" Margin="0,16,0,8"/>
                            <TextBlock Text="시장 통계, 트렌드 분석, 수요/공급 데이터가 표시됩니다."
                                     HorizontalAlignment="Center" Opacity="0.7"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!-- 개발 진행 상황 탭 -->
            <TabItem Header="개발 상황" 
                   Style="{StaticResource CustomTabItemStyle}">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CodeBrackets" 
                                                   Width="18" Height="18"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="개발 상황" 
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <ScrollViewer>
                    <materialDesign:Card Margin="16">
                        <StackPanel Margin="24">
                            <TextBlock Text="WPF 테스트 클라이언트 개발 진행 상황" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="{StaticResource HarvestGreen}"/>

                            <Separator Margin="0,16"/>

                            <TextBlock Text="✅ 완료된 작업:" FontWeight="Bold" Margin="0,8"/>
                            <TextBlock Text="• 프로젝트 생성 및 기초 설정" Margin="16,4"/>
                            <TextBlock Text="• App.xaml - Material Design 테마 설정" Margin="16,4"/>
                            <TextBlock Text="• App.xaml.cs - 의존성 주입 및 서비스 등록" Margin="16,4"/>
                            <TextBlock Text="• MainWindow.xaml - 메인 UI 레이아웃" Margin="16,4"/>

                            <TextBlock Text="🔄 진행 중:" FontWeight="Bold" Margin="0,16,0,8"/>
                            <TextBlock Text="• MainWindow.xaml.cs - 메인 창 코드 비하인드" Margin="16,4"/>

                            <TextBlock Text="📋 다음 예정:" FontWeight="Bold" Margin="0,16,0,8"/>
                            <TextBlock Text="• appsettings.json - 설정 파일" Margin="16,4"/>
                            <TextBlock Text="• MVVM 기본 구조 - 베이스 클래스들" Margin="16,4"/>
                            <TextBlock Text="• API 서비스 구현" Margin="16,4"/>
                            <TextBlock Text="• Views 및 ViewModels 개발" Margin="16,4"/>

                            <Separator Margin="0,16"/>

                            <TextBlock Text="Phase 1 진행률: 4/6 (약 67%)" 
                                     FontSize="16" FontWeight="Bold"
                                     Foreground="{StaticResource EconomyBlue}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- 하단 상태바 -->
        <materialDesign:Card Grid.Row="2" Margin="0,8,0,0">
            <StatusBar Background="{DynamicResource MaterialDesignBackground}" 
                     Height="32">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>

                <!-- 상태 메시지 -->
                <StatusBarItem Grid.Column="0">
                    <TextBlock x:Name="StatusMessage" 
                             Text="개발 진행 중 - Phase 1: 기본 구조 구축" 
                             FontSize="11"/>
                </StatusBarItem>

                <!-- 마지막 업데이트 시간 -->
                <StatusBarItem Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClockOutline" 
                                               Width="14" Height="14" 
                                               VerticalAlignment="Center"/>
                        <TextBlock x:Name="LastUpdateTime" 
                                 Text="--:--:--" 
                                 FontSize="11"
                                 Margin="4,0,0,0"/>
                    </StackPanel>
                </StatusBarItem>

                <!-- 개발 진행률 -->
                <StatusBarItem Grid.Column="2">
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                        <TextBlock x:Name="DevelopmentProgress" 
                                 Text="67% 완료" 
                                 FontSize="11"
                                 Margin="4,0,0,0"/>
                    </StackPanel>
                </StatusBarItem>

                <!-- 로딩 인디케이터 -->
                <StatusBarItem Grid.Column="3">
                    <ProgressBar x:Name="LoadingIndicator"
                               Style="{StaticResource LoadingProgressBar}"
                               Visibility="Collapsed"
                               Margin="16,0,8,0"/>
                </StatusBarItem>
            </StatusBar>
        </materialDesign:Card>
    </Grid>
</Window>